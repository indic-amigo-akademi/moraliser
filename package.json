{
    "name": "moraliser",
    "version": "0.2.0",
    "private": true,
    "description": "A simple chat software with adult and slang filter",
    "author": "",
    "scripts": {
        "serve": "vue-cli-service serve --open",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint",
        "postinstall": "npm run build",
        "watch": "vue-cli-service build --watch"
    },
    "dependencies": {
        "vue-class-component": "^8.0.0-0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^8.26.1",
        "@vue/cli-plugin-babel": "^5.0.8",
        "@vue/cli-plugin-eslint": "^5.0.8",
        "@vue/cli-plugin-typescript": "~5.0.0",
        "@vue/cli-service": "^5.0.8",
        "@vue/eslint-config-standard": "^8.0.1",
        "@vue/eslint-config-typescript": "^9.1.0",
        "babel-eslint": "^10.1.0",
        "bootstrap": "^5.2.2",
        "bootstrap-vue-3": "^0.4.6",
        "eslint-plugin-vue": "^9.6.0",
        "lint-staged": "^15.5.0",
        "moment": "^2.29.4",
        "sass": "^1.86.0",
        "sass-loader": "^16.0.5",
        "typescript": "~5.8.2",
        "vue": "^3.2.41",
        "vue-material-design-icons": "^5.3.1",
        "vue-router": "^4.1.5",
        "vue-template-compiler": "^2.7.13",
        "vuex": "^4.1.0"
    },
    "babel": {
        "presets": [
            "@vue/app"
        ]
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "plugin:vue/essential",
            "@vue/standard",
            "@vue/typescript"
        ],
        "rules": {
            "indent": [
                "error",
                4
            ],
            "semi": [
                "error",
                "always"
            ],
            "space-before-function-paren": [
                "warn",
                "never"
            ],
            "quotes": [
                "error",
                "double"
            ],
            "vue/no-unused-components": "warn"
        },
        "parserOptions": {
            "parser": "@typescript-eslint/parser"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "bugs": {
        "url": "https://github.com/indic-amigo-akademi/moraliser/issues"
    },
    "gitHooks": {
        "pre-commit": "lint-staged"
    },
    "homepage": "https://github.com/indic-amigo-akademi/moraliser#readme",
    "keywords": [],
    "license": "ISC",
    "lint-staged": {
        "*.js": [
            "vue-cli-service lint",
            "git add"
        ],
        "*.vue": [
            "vue-cli-service lint",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/indic-amigo-akademi/moraliser.git"
    }
}
